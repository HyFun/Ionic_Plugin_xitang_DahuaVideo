                <!--android:id="@+id/ib_video"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/ic_videocam_black_48dp"/>-->
            <!--<ImageButton-->
                <!--android:id="@+id/ib_camera"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/ic_photo_camera_black_48dp"/>-->
            <!--<ImageButton-->
                <!--android:id="@+id/ib_voice"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/ic_volume_up_black_48dp"/>-->
        <!--</LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_left_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_up_left" />

                    <ImageButton
                        android:id="@+id/ib_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_up" />

                    <ImageButton
                        android:id="@+id/ib_right_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_up_right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/ib_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_left" />

                    <ImageButton
                        android:id="@+id/ib_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:clickable="false"
                        android:src="@drawable/ic_middle" />

                    <ImageButton
                        android:id="@+id/ib_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/ib_left_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_down_left" />

                    <ImageButton
                        android:id="@+id/ib_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_down" />

                    <ImageButton
                        android:id="@+id/ib_right_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/arrow_down_right" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="35dp"
                android:layout_marginEnd="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:text="视   距"
                        android:textColor="#000"
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_video_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/ic_add_zoom"
                        />

                    <ImageButton
                        android:id="@+id/ib_video_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/ic_reduce_zoom" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:text="焦   距"
                        android:textColor="#000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/ib_focus_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/ic_add_zoom" />

                    <ImageButton
                        android:id="@+id/ib_focus_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="6dp"
                        android:src="@drawable/ic_reduce_zoom" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
